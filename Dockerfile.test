# Simple Dockerfile for testing
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Install additional dependencies that might be needed
RUN npm install express cors axios

# Copy the test server
COPY test-server.js ./test-server.js

# Copy source code (in case we need any other files)
COPY . .

EXPOSE 8080

CMD ["node", "test-server.js"]

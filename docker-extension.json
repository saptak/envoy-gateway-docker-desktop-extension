{
  "dockerDesktopExtensionMetadata": {
    "name": "Envoy Gateway",
    "icon": "./icon.svg",
    "description": "Manage Envoy Gateway resources with a modern, intuitive interface",
    "company": "Envoy Gateway Community",
    "version": "1.0.0",
    "authors": [
      {
        "name": "Envoy Gateway Team"
      }
    ],
    "license": "Apache-2.0",
    "categories": [
      "Kubernetes",
      "Networking",
      "Gateway"
    ],
    "homepage": "https://gateway.envoyproxy.io",
    "support": "https://github.com/envoyproxy/gateway/issues",
    "repository": "https://github.com/saptak/envoy-gateway-docker-desktop-extension"
  },
  "ui": {
    "dashboard-tab": {
      "title": "Envoy Gateway",
      "root": "/ui",
      "src": "dist/index.html"
    }
  },
  "vm": {
    "image": "envoy-gateway-extension:latest",
    "ports": {
      "3001": {
        "description": "API Server"
      },
      "3000": {
        "description": "Frontend Server"
      }
    },
    "composefile": "docker-compose.yml"
  }
}